{% extends 'base.html.twig' %}

{% block title %}Group{% endblock %}

{% block body %}
    <h1 class="text-center mb-5">{{ group.name }}</h1>
    <div class="d-flex justify-content-around">
        <div>
            <H3>Список участников</H3>
        </div>
        <div>
            <h3>Пригласить друзей</h3>
            {% for friend in allFriends %}
                <a href="">Пригласить {{ friend.userName }}  {{ friend.surname }}</a>
            {% endfor %}
        </div>
        <div class="d-flex justify-content-between ">
            <div class="ml-2 mr-2">
                <a  href="{{ path('group_edit', {'slug': group.slug}) }}">
                    <button class="btn btn-warning">group_edit</button>
                </a>
            </div>
            <div class="mr-2 ml-2">
                {{ include('group/_delete_form.html.twig') }}
            </div>
        </div>
    </div>
{% endblock %}

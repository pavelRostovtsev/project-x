{% extends 'base.html.twig' %}

{% block title %}Все пользователи{% endblock %}

{% block body %}
    {% for user in allUser %}
        <div class="mt-3 ">
            <a class="mt-1" href="{{ path('user_page', { slug: user.slug }) }}">{{ user.userName }} {{ user.surname }}</a><br>
            <a class="mt-1" href="{{ path('user_page', { slug: user.slug }) }}"><img src="{{ asset('uploads/img/' ~ user.avatar) }}" alt="" height="50px" width="70px"></a><br>
        </div>
    {% endfor %}
{% endblock %}

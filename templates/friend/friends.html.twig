{% extends 'base.html.twig' %}

{% block title %}Все пользователи{% endblock %}

{% block body %}
    <h1>Список друзей</h1>
    {% for friend in allFriends %}
        <div class="mt-3 ">
            <a class="mt-1" href="{{ path('user_page', { slug: friend.slug }) }}">{{ friend.userName }} {{ friend.surname }}</a><br>
            <a class="mt-1" href="{{ path('user_page', { slug: friend.slug }) }}"><img src="{{ asset('uploads/img/' ~ friend.avatar) }}" alt="" height="50px" width="70px"></a><br>
        </div>
    {% endfor %}
{% endblock %}
